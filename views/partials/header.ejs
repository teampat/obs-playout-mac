<!-- Header -->
<header class="flex flex-wrap items-center gap-4 mb-8 pb-6 border-b border-dark-700">
  <h1 class="text-2xl md:text-3xl font-bold text-white">🎬 <%= title %></h1>
  
  <div class="flex flex-wrap gap-2">
    <!-- OBS Connection Status -->
    <div id="obsStatus" class="px-3 py-1 bg-dark-800 border border-dark-600 rounded-full text-xs whitespace-nowrap flex items-center gap-2">
      <div id="obsIndicator" class="w-2 h-2 rounded-full bg-red-500"></div>
      <span id="obsStatusText" class="text-dark-300">Checking OBS...</span>
    </div>

    <!-- OBS Connect Button -->
    <button id="obsConnectBtn" class="animate-press px-3 py-1 bg-blue-600 hover:bg-blue-700 disabled:opacity-60 disabled:cursor-not-allowed border border-blue-500 rounded-full text-xs text-white font-medium transition-all touch-manipulation hidden">
      🔌 Connect to OBS
    </button>

    <!-- OBS Disconnect Button -->
    <button id="obsDisconnectBtn" class="animate-press px-3 py-1 bg-red-600 hover:bg-red-700 disabled:opacity-60 disabled:cursor-not-allowed border border-red-500 rounded-full text-xs text-white font-medium transition-all touch-manipulation hidden">
      🔌 Disconnect OBS
    </button>

    <!-- Scene Selector (only show when connected) -->
    <div id="sceneSelector" class="hidden flex items-center gap-2">
      <label for="targetScene" class="text-xs text-gray-300 font-medium">🎬 Scene:</label>
      <select id="targetScene" class="px-2 py-1 bg-dark-700 border border-dark-600 rounded text-xs text-white focus:border-blue-500 focus:outline-none">
        <option value="">Select scene...</option>
      </select>
    </div>

    <!-- Settings Button -->
    <button id="settingsBtn" class="animate-press px-3 py-1 bg-gray-600 hover:bg-gray-700 border border-gray-500 rounded-full text-xs text-white font-medium transition-all touch-manipulation">
      ⚙️ Settings
    </button>
  </div>
</header>
